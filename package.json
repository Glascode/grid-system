{
  "name": "matrix",
  "version": "2.1.1",
  "description": "Matrix is a CSS framework based on the CSS Grid Layout.",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "minify:scss": "node-sass scss/matrix.scss css/matrix.min.css --output-style compressed",
    "build:scss": "node-sass scss/matrix.scss css/matrix.css --source-map css/matrix.css.map && npm run minify:scss",
    "build:docs": "eleventy --pathprefix=matrix",
    "serve:docs": "eleventy --serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Glascode/matrix.git"
  },
  "keywords": [],
  "author": "Maël Querré & Alex Dean",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Glascode/matrix/issues"
  },
  "homepage": "https://github.com/Glascode/matrix#readme",
  "dependencies": {},
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "node-sass": "^4.13.0",
    "sass": "^1.23.7"
  }
}
